<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ECharts</title>
    <!-- 引入 echarts.js -->
    <script src="~/Areas/study/Content/echarts.js"></script>
</head>
<body>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="main" style="width: 600px;height:400px;"></div>
    <script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));

    // 指定图表的配置项和数据
    var option = {
        title: {
            text: 'ECharts 入门示例'
        },
        tooltip: {},
        legend: {
            data: ['销量']
        },
        xAxis: {
            data: ["衬衫", "羊毛衫", "雪纺衫", "裤子", "高跟鞋", "袜子"],
            axisLabel: {
                interval: 0,
                formatter: function (val) {
                    return val.split("").join("\n");
                }//值太长的时候换行

            }//坐标上的值全部显示
        },
        yAxis: {},
        series: [{
            name: '销量',
            type: 'bar',
            data: [5, 20, 36, 10, 10, 20],
            itemStyle: {
                normal: {
                    color: '#274d76',
                    label: {
                        show: true, position: 'top'
                    }//头部显示数据
                }
            }
               , barWidth: 30//柱子固定宽度
        }],
        color:'blue'
    };

    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);
    </script>

    @*demo代码*@
    <script type="text/javascript">
    $(function () {
        getProjects();
        setTimeout(print, 1000);
        $.post("/Home/ProjectHours", {}, function (data) {
            var data1 = JSON.parse(data);
            name = eval('(' + data1.names.toString() + ')');
            hours = eval('(' + data1.hours + ')');
            bind(name, hours);
        });
    })
    function getProjects() {

        $.post("/ProjectManager/GetProjectData", { pageIndex: 1, pageSize: 10000, ProjectName: "", ProjectNo: "" }, function (data) {
            var model = eval('(' + data + ')');

            $.each(model.Data, function (i, n) {
                $("#projectID").append("<option value =" + n.ID + ">" + n.ProjectName + "</option>");
            });

        });
    }
    var myChart = echarts.init(document.getElementById('mainPic'));
    var project = echarts.init(document.getElementById('project'));
    var name = [];
    var hours = [];
    function bind(name, hours) {
        var str = JSON.stringify(name);
        var newname = eval('(' + str + ')');
        arr = newname.split(',');
        var option = {
            title: {
                text: '项目用时'
            },
            tooltip: {},
            legend: {
                data: ['用时']
            },
            xAxis: {
                data: arr
            },
            yAxis: {},
            series: [{
                name: '用时',
                type: 'bar',
                data: hours
            }],
            itemStyle: {
                normal: {
                    color: '#274d76'
                }
            }
        };
        project.setOption(option);
    }
    // 指定图表的配置项和数据
    function binddata(name, hours) {
        var str = JSON.stringify(name);
        var newname = eval('(' + str + ')');
        arr = newname.split(',');
        var option = {
            title: {
                text: '项目人员用时'
            },
            tooltip: {},
            legend: {
                data: ['用时']
            },
            xAxis: {
                data: arr
            },
            yAxis: {},
            series: [{
                name: '用时',
                type: 'bar',
                data: hours
            }],
            itemStyle: {
                normal: {
                    color: '#274d76'
                }
            }
        };
        myChart.setOption(option);

    }
    // 使用刚指定的配置项和数据显示图表。
    function print() {
        $.post("/Home/ProjectUser", { startTime: $("#txtStartTime").val(), endTime: $("#txtEndTime").val(), projectId: $("#projectID").val() }, function (data) {
            var data1 = JSON.parse(data);
            name = eval('(' + data1.names.toString() + ')');
            hours = eval('(' + data1.hours + ')');
            binddata(name, hours);
        });
    }
    $("#projectID").change(function () {
        print();
    })

    </script>
</body>
</html>